<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/titulo_adicionar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="18dp"
        android:layout_marginTop="16dp"
        android:text="Adicionar contato"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/campo_nome"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/titulo_adicionar"
        android:layout_below="@+id/titulo_adicionar"
        android:layout_marginTop="61dp"
        android:hint="Nome" />

    <EditText
        android:id="@+id/campo_telefone"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/titulo_adicionar"
        android:layout_marginTop="120dp"
        android:hint="Telefone"
        android:layout_below="@id/campo_nome"/>

    <EditText
        android:id="@+id/campo_email"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/titulo_adicionar"
        android:layout_marginTop="180dp"
        android:hint="Email"
        android:layout_below="@id/campo_telefone"/>


    <EditText
        android:id="@+id/campo_cidade"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/titulo_adicionar"
        android:layout_marginTop="16dp"
        android:layout_below="@id/campo_email"
        android:hint="Cidade" />

    <TextView
        android:id="@+id/erro_vazio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="187dp"
        android:text="Preencha todos os campos"
        android:textColor="@color/error"
        android:layout_below="@id/campo_cidade"
        android:layout_marginTop="16dp"/>

    <Button
        android:id="@+id/btn_limpar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="106dp"
        android:layout_marginStart="68dp"
        android:text="Limpar" />

    <Button
        android:id="@+id/btn_salvar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/btn_limpar"
        android:layout_marginEnd="98dp"
        android:text="Salvar" />

    <Button
        android:id="@+id/btn_contatos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="43dp"
        android:text="Visualizar contatos" />


</RelativeLayout>